            "{{",
            " \"name\": (string) - Nome do inimigo,",
            " \"type\": (string) - Tipo: 'humanoide' ou 'fera',",
            " \"region\": (list) - Lista de strings com locais onde pode ser encontrado,",
            " \"hp\": (int) - Vida atual,",
            " \"maxhp\": (int) - Vida máxima,",
            " \"strength\": (int) - Poder de ataque,",
